<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/etxt_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Nhập số thứ nhất"/>

    <EditText
        android:id="@+id/etxt_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Nhập số thứ hai"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cộng"
        android:onClick="XULY_CONG"/>

    <Button
        android:id="@+id/btn_Subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trừ"
        android:onClick="XULY_TRU"/>

    <Button
        android:id="@+id/btn_Multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân"
        android:onClick="XULY_NHAN"/>

    <Button
        android:id="@+id/btn_Divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chia"
        android:onClick="XULY_CHIA"/>

    <TextView
        android:id="@+id/txt_kq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả"/>

</LinearLayout>
